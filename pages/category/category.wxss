/* pages/category/category.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.left {
  width: 200rpx;
  /* min-width: 200rpx; */
  flex-shrink: 0;
  background-color: #f8f8f8;
}

.right {
  /* width: calc(100%-200rpx); */
  flex-grow: 1;
  background-color: white;
}

.category-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.category-item-active {
  background-color: white;
}

.left-line {
  width: 8rpx;
  height: 90rpx;
  display: float;
  float: left;
}

.left-line-active {
  background-color: red;
}

.goodsWrap-category {
  margin-left: 20rpx;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 30rpx;
  color: rgb(92, 59, 65);
}

.goods-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  margin-left: 20rpx;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #f2f2f2;
}

.goods-pic {
  width: 143rpx;
  height: 143rpx;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding: 8rpx;
  height: 131rpx;
  justify-content: space-between;
  font-size: 30rpx;
}

.left-line {
  position: absolute;
  left: 0;
}
